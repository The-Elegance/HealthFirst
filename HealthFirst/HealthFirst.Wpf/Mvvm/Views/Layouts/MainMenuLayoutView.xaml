<UserControl
    x:Class="HealthFirst.WPF.Mvvm.Views.Layouts.MainMenuLayoutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HealthFirst.WPF.Mvvm.Views.Layouts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sidebar="clr-namespace:HealthFirst.WPF.Mvvm.Views.Sidebar"
    xmlns:vm="clr-namespace:HealthFirst.WPF.Mvvm.ViewModels.Layouts"
    d:DataContext="{d:DesignInstance vm:MainMenuLayoutViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    mc:Ignorable="d">


    <UserControl.Resources />


    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="88" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ContentControl Content="{Binding Sidebar}" />
    </Grid>
</UserControl>
