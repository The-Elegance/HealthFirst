<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="PrimaryColor">#1f2029</Color>
    <SolidColorBrush x:Key="PrimarySolidColorBrush" Color="{DynamicResource PrimaryColor}" />

    <Color x:Key="SecondaryColor">#272a34</Color>
    <SolidColorBrush x:Key="SecondarySolidColorBrush" Color="{DynamicResource SecondaryColor}" />

    <Color x:Key="ActivityColor">#bc73d4</Color>
    <SolidColorBrush x:Key="ActivtySolidColorBrush" Color="{DynamicResource ActivityColor}" />
</ResourceDictionary>